@Test
public void testNonBlockingProcess() {
    final BlockingWritesExitValueProcess process = BlockingWritesExitValueProcess.createFastWritingProcess("", "");
    assertEquals("Invalid exit value", BlockingWritesExitValueProcess.EXIT_VALUE, process.exitValue());
    assertTrue("Invalid input stream class", process.getInputStream() instanceof BlockingInputStream);
    assertTrue("Invalid error stream class", process.getErrorStream() instanceof BlockingInputStream);
}
