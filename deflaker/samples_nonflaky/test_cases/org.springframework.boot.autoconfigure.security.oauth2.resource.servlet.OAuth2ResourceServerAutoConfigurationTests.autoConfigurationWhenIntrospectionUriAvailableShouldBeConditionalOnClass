@Test
void autoConfigurationWhenIntrospectionUriAvailableShouldBeConditionalOnClass() {
    this.contextRunner.withClassLoader(new FilteredClassLoader(BearerTokenAuthenticationToken.class)).withPropertyValues("spring.security.oauth2.resourceserver.opaquetoken.introspection-uri=https://check-token.com", "spring.security.oauth2.resourceserver.opaquetoken.client-id=my-client-id", "spring.security.oauth2.resourceserver.opaquetoken.client-secret=my-client-secret").run((context) -> assertThat(context).doesNotHaveBean(OpaqueTokenIntrospector.class));
}
