@Test
public void testExternalEntity() throws Exception {
    try {
        XmlUtils.parseXml(EXTERNAL_ENTITY_XML);
        fail("DOCTYPE should not be allowed");
    } catch (JDOMParseException e) {
        assertTrue("Exception has different message.", e.getMessage().contains("DOCTYPE is disallowed when the feature \"http://apache." + "org/xml/features/disallow-doctype-decl\" set to true"));
    }
}
