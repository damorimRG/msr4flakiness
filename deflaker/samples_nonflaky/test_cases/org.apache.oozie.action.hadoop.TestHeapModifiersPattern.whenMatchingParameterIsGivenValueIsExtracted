@Test
public void whenMatchingParameterIsGivenValueIsExtracted() {
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-Xms1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-Xmx1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-ms1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-mx1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-Xms1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-Xms1G").matches());
    assertTrue("matching parameter value should be found", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-Xms1G -Xmx:123K -XX:+UnlockExperimentalVMOptions").matches());
    assertFalse("not matching parameter value should not be extracted", JavaActionExecutor.HEAP_MODIFIERS_PATTERN.matcher("-XX:+UnlockExperimentalVMOptions").matches());
}
