@Test
public void testTruncateJournalFile() throws IOException {
    assertFalse(journal.exists());
    JournalFileWriter writer = journal.openJournalWriter();
    for (int i = 0; i < 100; i++) {
        writer.writeLine("line " + i);
    }
    assertTrue(journal.exists());
    writer.truncate();
    assertTrue(journal.exists());
}
