@Test
public void optionalInt_fails_with_constraint_violation() {
    final Response response = target("/valid/optionalInt").queryParam("num", 5).request().get();
    assertThat(response.getStatus()).isEqualTo(400);
    assertThat(response.readEntity(String.class)).isEqualTo("{\"errors\":[\"query param num must be greater than or equal to 23\"]}");
}
