@Test
public void packageInfoInheritDoc() throws Exception {
    final DefaultConfiguration checkConfig = createModuleConfig(JavadocStyleCheck.class);
    final String[] expected = { "1: " + getCheckMessage(MSG_NO_PERIOD) };
    verify(checkConfig, getPath("pkginfo" + File.separator + "invalidinherit" + File.separator + "package-info.java"), expected);
}
